<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"/>

    <!-- Title -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="비밀번호를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!-- Password TextField -->
    <FrameLayout
            android:id="@+id/layoutPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_auth_text_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

            <ImageView
                    android:id="@+id/ivPasswordError"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone"/>

            <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/pretendard"
                    android:hint="비밀번호를 입력해주세요."
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="14sp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Password Confirm TextField -->
    <FrameLayout
            android:id="@+id/layoutPasswordConfirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_auth_text_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPassword">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

            <ImageView
                    android:id="@+id/ivPasswordConfirmError"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone"/>

            <EditText
                    android:id="@+id/etPasswordConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/pretendard"
                    android:hint="비밀번호를 재입력해주세요."
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="14sp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Password Check Stack View -->
    <LinearLayout
            android:id="@+id/layoutPasswordCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPasswordConfirm">

        <!-- Uppercase Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivUppercaseCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="대문자 최소 1개 이상"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Lowercase Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivLowercaseCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="소문자 최소 1개 이상"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Number Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivNumberCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="숫자 최소 1개 이상"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Special Character Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivSpecialCharCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="특수문자 최소 1개 이상"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Length Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivLengthCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="비밀번호 최소 10자 이상"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Password Confirm Check -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/ivPasswordConfirmCheck"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_error_circle"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard"
                    android:text="비밀번호 불일치"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:enabled="false"
            android:fontFamily="@font/pretendard_semibold"
            android:text="다음"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/selector_confirm_button_tint"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
