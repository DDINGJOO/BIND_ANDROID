<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:title="문의 상세"
            app:titleTextAppearance="@style/TextStyle.Title"
            app:titleTextColor="@color/black"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- Category Badge -->
            <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_category"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="예약 관련"
                    android:textColor="@color/main_yellow"
                    android:textSize="13sp"/>

            <!-- Title -->
            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="문의 제목"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>

            <!-- Date -->
            <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="23.12.01 14:30"
                    android:textColor="@color/gray5"
                    android:textSize="13sp"/>

            <!-- Separator -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_200"/>

            <!-- Question Content -->
            <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:lineSpacingExtra="6dp"
                    android:text="문의 내용이 여기에 표시됩니다."
                    android:textColor="@color/gray1"
                    android:textSize="15sp"/>

            <!-- Answer Section -->
            <LinearLayout
                    android:id="@+id/layoutAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/bg_answer"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                <!-- Answer Badge -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_badge_answer"
                        android:fontFamily="@font/pretendard_bold"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="답변완료"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                <!-- Answer Content -->
                <TextView
                        android:id="@+id/tvAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:lineSpacingExtra="4dp"
                        android:text="답변 내용"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"/>

                <!-- Answer Date -->
                <TextView
                        android:id="@+id/tvAnswerDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="23.12.02 10:00"
                        android:textColor="@color/gray5"
                        android:textSize="12sp"/>

            </LinearLayout>

            <!-- Waiting Answer Section -->
            <LinearLayout
                    android:id="@+id/layoutWaiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="40dp"
                    android:visibility="gone">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_logo"
                        android:alpha="0.3"
                        android:contentDescription="대기 중"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="답변 대기중"
                        android:textColor="@color/gray5"
                        android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading -->
    <FrameLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>
