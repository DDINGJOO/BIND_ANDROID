<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_close"
            app:title="예약취소"
            app:titleTextAppearance="@style/TextStyle.Title"
            app:titleTextColor="@color/black"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- Warning Message -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_warning"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning"
                        android:contentDescription="경고"
                        app:tint="@color/error"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="취소 수수료와 환불 금액을 확인해 주세요."
                        android:textColor="@color/error"
                        android:textSize="14sp"/>
            </LinearLayout>

            <!-- Cancel Fee Info -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="취소 수수료"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tvCancelFeePolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="이용 5일 전 이상 취소 시 100% 환불"
                        android:textColor="@color/gray6"
                        android:textSize="14sp"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/gray_200"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="취소 수수료"
                            android:textColor="@color/gray6"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/tvCancelFeeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="0원"
                            android:textColor="@color/error"
                            android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Refund Info -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="환불 예정 정보"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                <!-- Payment Amount -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="결제 금액"
                            android:textColor="@color/gray6"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/tvPaymentAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="0원"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                </LinearLayout>

                <!-- Cancel Fee -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="취소 수수료"
                            android:textColor="@color/gray6"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/tvCancelFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="-0원"
                            android:textColor="@color/error"
                            android:textSize="14sp"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/gray_200"/>

                <!-- Refund Method -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="환불 방법"
                            android:textColor="@color/gray6"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/tvRefundMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="카드 환불"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/gray_200"/>

                <!-- Final Refund Amount -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="최종 환불금액"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/tvRefundAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="0원"
                            android:textColor="@color/main_yellow"
                            android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Refund Policy Info -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_rounded_gray"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="환불 정책 안내"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:lineSpacingExtra="4dp"
                        android:text="• 이용 5일 전 이상: 100% 환불\n• 이용 4일 전: 70% 환불 (수수료 30%)\n• 이용 3일 전: 50% 환불 (수수료 50%)\n• 이용 2일 전: 30% 환불 (수수료 70%)\n• 이용 1일 전: 10% 환불 (수수료 90%)\n• 이용 당일: 환불 불가"
                        android:textColor="@color/gray6"
                        android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Cancel Button -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="8dp"
            android:padding="16dp">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="예약 취소하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/error"
                app:cornerRadius="10dp"/>

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>
