<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약자 정보"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Room Image -->
            <ImageView
                android:id="@+id/ivRoomImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle_gray"
                android:clipToOutline="true"
                tools:background="@color/gray_300" />

            <!-- Room Name -->
            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_bold"
                tools:text="룸 A" />

            <!-- Reservation Info Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="15dp"
                android:padding="15dp"
                android:background="@drawable/bg_rounded_border">

                <!-- Date Row -->
                <TextView
                    android:id="@+id/labelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 날짜"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelDate"
                    app:layout_constraintBottom_toBottomOf="@id/labelDate"
                    tools:text="24.12.18 (수)" />

                <!-- Time Row -->
                <TextView
                    android:id="@+id/labelTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="예약 시간"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelDate" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelTime"
                    app:layout_constraintBottom_toBottomOf="@id/labelTime"
                    tools:text="14:00 ~ 16:00" />

                <!-- Room Price Row -->
                <TextView
                    android:id="@+id/labelRoomPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="공간"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTime" />

                <TextView
                    android:id="@+id/tvRoomPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelRoomPrice"
                    app:layout_constraintBottom_toBottomOf="@id/labelRoomPrice"
                    tools:text="50,000원" />

                <!-- Option Price Row -->
                <TextView
                    android:id="@+id/labelOptionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="옵션"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelRoomPrice" />

                <TextView
                    android:id="@+id/tvOptionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelOptionPrice"
                    app:layout_constraintBottom_toBottomOf="@id/labelOptionPrice"
                    tools:text="10,000원" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray_100" />

            <!-- Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:text="예약자 정보"
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/bg_auth_text_field"
                android:paddingHorizontal="15dp"
                android:hint="이름을 입력해주세요."
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:inputType="text"
                android:maxLines="1" />

            <!-- Contact Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:text="연락처"
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/bg_auth_text_field"
                android:paddingHorizontal="15dp"
                android:hint="연락처를 입력해주세요."
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:inputType="phone"
                android:maxLines="1" />

            <!-- Dynamic Fields Container -->
            <LinearLayout
                android:id="@+id/layoutDynamicFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp" />

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:background="@color/gray_100" />

            <!-- Customer Service Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/pretendard_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="궁금하신 점이 있으시면 고객센터로 문의해 주세요."
                    android:textColor="@color/gray_600"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_customer_service"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/gray_600" />

                    <TextView
                        android:id="@+id/tvCustomerServicePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="070-7954-4130"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- FAQ Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자주 묻는 질문"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/pretendard_bold" />

                <!-- Reservation Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="예약"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:background="@drawable/bg_badge_black" />

                <!-- FAQ Item 1 -->
                <LinearLayout
                    android:id="@+id/layoutFaq1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q."
                            android:textColor="@color/main_yellow"
                            android:textSize="15sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="예약 내역은 어디서 확인하나요?"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium" />

                        <ImageView
                            android:id="@+id/ivFaq1Arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/gray_500" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFaq1Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="마이페이지 > 예약 내역에서 확인할 수 있습니다."
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200" />

                </LinearLayout>

                <!-- FAQ Item 2 -->
                <LinearLayout
                    android:id="@+id/layoutFaq2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q."
                            android:textColor="@color/main_yellow"
                            android:textSize="15sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="예약 변경이나 취소가 가능한가요?"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium" />

                        <ImageView
                            android:id="@+id/ivFaq2Arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/gray_500" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFaq2Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="상품별 정책에 따라 예약 상세 페이지에서 변경/취소할 수 있습니다."
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200" />

                </LinearLayout>

                <!-- Payment Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="결제"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:background="@drawable/bg_badge_black" />

                <!-- FAQ Item 3 -->
                <LinearLayout
                    android:id="@+id/layoutFaq3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q."
                            android:textColor="@color/main_yellow"
                            android:textSize="15sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="어떤 결제 수단을 지원하나요?"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium" />

                        <ImageView
                            android:id="@+id/ivFaq3Arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/gray_500" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFaq3Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="신용/체크카드 및 간편결제를 지원하며 상품/지역에 따라 다를 수 있습니다."
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200" />

                </LinearLayout>

                <!-- FAQ Item 4 -->
                <LinearLayout
                    android:id="@+id/layoutFaq4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q."
                            android:textColor="@color/main_yellow"
                            android:textSize="15sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="환불은 어떻게 진행되나요?"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium" />

                        <ImageView
                            android:id="@+id/ivFaq4Arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/gray_500" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFaq4Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A."
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="취소 규정에 따라 환불되며 결제 수단별 처리 기간이 상이합니다."
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200" />

                </LinearLayout>

            </LinearLayout>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_100" />

            <!-- Terms Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관 동의"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/pretendard_bold" />

                <!-- All Agree Checkbox -->
                <LinearLayout
                    android:id="@+id/layoutAgreeAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/ivCheckAll"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_checkbox_unchecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="전체 동의"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pretendard_semibold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_200" />

                <!-- Terms of Service -->
                <LinearLayout
                    android:id="@+id/layoutTermsService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCheckTermsService"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_checkbox_small_unchecked" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="이용약관 동의 (필수)"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium" />

                    <ImageView
                        android:id="@+id/ivArrowTermsService"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_400" />

                </LinearLayout>

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/layoutPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCheckPrivacyPolicy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_checkbox_small_unchecked" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="개인정보 수집 및 이용 동의 (필수)"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium" />

                    <ImageView
                        android:id="@+id/ivArrowPrivacyPolicy"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_400" />

                </LinearLayout>

                <!-- Third Party -->
                <LinearLayout
                    android:id="@+id/layoutThirdParty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCheckThirdParty"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_checkbox_small_unchecked" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="제3자 정보제공 동의 (필수)"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium" />

                    <ImageView
                        android:id="@+id/ivArrowThirdParty"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_400" />

                </LinearLayout>

                <!-- Cancellation Policy -->
                <LinearLayout
                    android:id="@+id/layoutCancellationPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCheckCancellationPolicy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_checkbox_small_unchecked" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="취소 및 환불 규정 동의 (필수)"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium" />

                    <ImageView
                        android:id="@+id/ivArrowCancellationPolicy"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_400" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="34dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_semibold"
            android:enabled="false"
            app:backgroundTint="@color/selector_button_yellow"
            app:cornerRadius="10dp"
            tools:text="60,000원 결제하기" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
