<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">

    <!-- Logo -->
    <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Email TextField -->
    <FrameLayout
            android:id="@+id/layoutEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_auth_text_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">

            <ImageView
                    android:id="@+id/ivEmailError"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/pretendard"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="14sp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Password TextField -->
    <FrameLayout
            android:id="@+id/layoutPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_auth_text_field"
            app:layout_constraintEnd_toEndOf="@id/layoutEmail"
            app:layout_constraintStart_toStartOf="@id/layoutEmail"
            app:layout_constraintTop_toBottomOf="@id/layoutEmail">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">

            <ImageView
                    android:id="@+id/ivPasswordError"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_error"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/pretendard"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="14sp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/main_yellow"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/layoutEmail"
            app:layout_constraintStart_toStartOf="@id/layoutEmail"
            app:layout_constraintTop_toBottomOf="@id/layoutPassword"/>

    <!-- Find Password Label -->
    <TextView
            android:id="@+id/tvFindPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendard"
            android:text="@string/find_password"
            android:textColor="@color/gray5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/layoutEmail"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"/>

    <!-- SignUp Button -->
    <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="@string/sign_up"
            android:textColor="@color/gray5"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/tvFindPassword"
            app:layout_constraintEnd_toEndOf="@id/layoutEmail"
            app:layout_constraintTop_toTopOf="@id/tvFindPassword"/>

    <!-- Alert Message View -->
    <LinearLayout
            android:id="@+id/layoutAlertMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_alert_message"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

        <TextView
                android:id="@+id/tvAlertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="이메일 주소를 입력해주세요."/>

    </LinearLayout>

    <!-- Social Login Separator -->
    <LinearLayout
            android:id="@+id/layoutSocialSeparator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/layoutSocialButtons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/pretendard"
                android:text="@string/social_login_separator"
                android:textColor="@color/gray5"
                android:textSize="13sp"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line"/>

    </LinearLayout>

    <!-- Social Login Buttons -->
    <LinearLayout
            android:id="@+id/layoutSocialButtons"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <!-- Kakao Login -->
        <ImageButton
                android:id="@+id/btnKakaoLogin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_social_button_kakao"
                android:contentDescription="@string/kakao_login"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_kakao"/>

        <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <!-- Google Login -->
        <ImageButton
                android:id="@+id/btnGoogleLogin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_social_button_google"
                android:contentDescription="@string/google_login"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_google"/>

        <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <!-- Apple Login -->
        <ImageButton
                android:id="@+id/btnAppleLogin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_social_button_apple"
                android:contentDescription="@string/apple_login"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_apple"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
