<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="비밀번호 재설정"
            app:titleCentered="true"
            app:titleTextColor="@color/black"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/btnConfirm">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/spacing_md">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="이메일"
                    android:textColor="@color/tint_tab"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="@dimen/input_radius"
                    app:boxCornerRadiusBottomStart="@dimen/input_radius"
                    app:boxCornerRadiusTopEnd="@dimen/input_radius"
                    app:boxCornerRadiusTopStart="@dimen/input_radius">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="이메일을 입력해주세요"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="새 비밀번호"
                    android:textColor="@color/tint_tab"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="@dimen/input_radius"
                    app:boxCornerRadiusBottomStart="@dimen/input_radius"
                    app:boxCornerRadiusTopEnd="@dimen/input_radius"
                    app:boxCornerRadiusTopStart="@dimen/input_radius"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="새 비밀번호를 입력해주세요"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="새 비밀번호 확인"
                    android:textColor="@color/tint_tab"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPasswordConfirm"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="@dimen/input_radius"
                    app:boxCornerRadiusBottomStart="@dimen/input_radius"
                    app:boxCornerRadiusTopEnd="@dimen/input_radius"
                    app:boxCornerRadiusTopStart="@dimen/input_radius"
                    app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasswordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="새 비밀번호를 재입력해주세요"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Requirements -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvReqUppercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="대문자 포함"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:id="@+id/tvReqLowercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="소문자 포함"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:id="@+id/tvReqNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="숫자 포함"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:id="@+id/tvReqSpecial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="특수문자 포함"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:id="@+id/tvReqLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="10자 이상"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

                <TextView
                        android:id="@+id/tvReqMatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_checkbox_small_unchecked"
                        android:drawablePadding="8dp"
                        android:text="비밀번호 일치"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:enabled="false"
            android:text="비밀번호 설정하고 로그인하러 가기!"
            android:textSize="16sp"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="@dimen/button_radius"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_alpha_50"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
