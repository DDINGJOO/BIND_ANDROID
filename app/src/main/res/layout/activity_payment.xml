<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제하기"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/bottomContainer">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

            <!-- Payment Method Section -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결제 수단"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pretendard_bold"/>

                <LinearLayout
                        android:id="@+id/btnTossPay"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_rounded_border">

                    <ImageView
                            android:id="@+id/ivTossPayCheck"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_checkbox_unchecked"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="토스페이"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium"/>

                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_100"/>

            <!-- Price Section -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결제 금액"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pretendard_bold"/>

                <!-- Room Price -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="공간 이용료"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium"/>

                    <TextView
                            android:id="@+id/tvRoomPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium"
                            tools:text="50,000원"/>

                </LinearLayout>

                <!-- Product Price -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="옵션 추가"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium"/>

                    <TextView
                            android:id="@+id/tvProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_medium"
                            tools:text="10,000원"/>

                </LinearLayout>

                <!-- Total Price -->
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gray_200"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="총 결제 금액"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/pretendard_bold"/>

                    <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_yellow"
                            android:textSize="18sp"
                            android:fontFamily="@font/pretendard_bold"
                            tools:text="60,000원"/>

                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_100"/>

            <!-- Consent Section -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결제 약관 동의"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pretendard_bold"/>

                <!-- Consent 1 -->
                <LinearLayout
                        android:id="@+id/layoutConsent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/ivConsent1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_checkbox_small_unchecked"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="[필수] 개인정보 수집 이용 동의"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"/>

                </LinearLayout>

                <!-- Consent 2 -->
                <LinearLayout
                        android:id="@+id/layoutConsent2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/ivConsent2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_checkbox_small_unchecked"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="[필수] 개인정보 제3자 정보 제공 동의"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"/>

                </LinearLayout>

                <!-- Consent 3 -->
                <LinearLayout
                        android:id="@+id/layoutConsent3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/ivConsent3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_checkbox_small_unchecked"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="[필수] 결제대행 서비스 이용약관 동의"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_medium"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Container -->
    <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="34dp"
            android:background="@color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_semibold"
                android:enabled="false"
                app:backgroundTint="@color/selector_button_yellow"
                app:cornerRadius="10dp"
                tools:text="총 60,000원 결제하기"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
