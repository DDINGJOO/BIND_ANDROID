<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.BIND_ANDROID" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/custom_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/main_yellow</item>
        <item name="colorSecondaryVariant">@color/main_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <!-- Pretendard Font Family -->
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="fontFamily">@font/pretendard</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.BIND_ANDROID.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.BIND_ANDROID</item>
    </style>

    <!-- Transparent Activity Theme -->
    <style name="Theme.BIND_ANDROID.Transparent" parent="Theme.BIND_ANDROID">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- BottomSheet Dialog Theme -->
    <style name="Theme.BIND_ANDROID.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.BIND_ANDROID.BottomSheet</item>
    </style>

    <style name="Widget.BIND_ANDROID.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BIND_ANDROID.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.BIND_ANDROID.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="ShapeAppearance.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Text Styles matching iOS Pretendard usage -->
    <style name="TextStyle.Title" parent="">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="TextStyle.Subtitle" parent="">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="TextStyle.Body" parent="">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="TextStyle.Caption" parent="">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <style name="TextStyle.Button" parent="">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Bottom Navigation Text Style -->
    <style name="BottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Segmented Control Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Bottom Sheet Dialog Theme (for filter sheets) -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BottomSheet</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Filter Chip Style (iOS-like) for Bottom Sheets -->
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="chipBackgroundColor">@color/chip_filter_background_selector</item>
        <item name="chipStrokeColor">@color/chip_filter_stroke_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">@color/chip_filter_text_selector</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Home Filter Chip Style (iOS-like) -->
    <style name="HomeFilterChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="chipBackgroundColor">@color/chip_home_background_selector</item>
        <item name="chipStrokeColor">@color/chip_home_stroke_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">@color/chip_home_text_selector</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>
